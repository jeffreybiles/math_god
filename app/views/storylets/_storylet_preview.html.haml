-if requirements(storylet.id)[1]

-elsif requirements(storylet.id)[0] == ''
  - random_num = rand(20000)
  %a(href="/storylets/#{storylet.id}/action" style="background: black;" )
    -if storylet.special
      .storylet.special
        = render 'storylets/preview_contents', storylet: storylet, open: true, chances: requirements(storylet.id)[2]
    -else
      .storylet
        = render 'storylets/preview_contents', storylet: storylet, open: true, chances: requirements(storylet.id)[2]

-else
  -if storylet.special
    .storylet.unavailable.special
      = render 'storylets/preview_contents', storylet: storylet, open: false
  -else
    .storylet.unavailable
      = render 'storylets/preview_contents', storylet: storylet, open: false