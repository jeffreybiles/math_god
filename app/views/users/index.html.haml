%h1 Listing users

%table
  %tr
    %th Name
    %th Email
    %th Currency
    %th Location
    %th Universe
    %th
    %th
    %th

  - @users.each do |user|
    %tr
      %td= user.name
      %td= user.email
      %td= user.currency || 0
      %td= link_to user.location.name, user.location if user.location
      %td= link_to user.universe.name, user.universe if user.universe
      %td= link_to 'Show', user
      %td= link_to 'Edit', edit_user_path(user) if can? :update, user
      %td= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete if can? :delete, user

%br

= link_to 'New User', new_user_path if can? :create, User
